<div class ="py-5">
  <form action="login" method="POST" class="form-signin">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="text-center py-3">
      <%= image_tag 'logo_black.png', height: 170, width: 170 %>
    </div>
    <div class="mb-2">
      <span class="text-danger mb-4" ><%= @message %></span>
    </div>
    <div class="mb-3">
      <label for="inputEmail" class="sr-only"></label>
      <input type="text" name="username_email" placeholder="Email or username" class="form-control" required autofocus>
    </div>
    <div class="mb-3">
      <label for="inputPassword" class="sr-only"></label>
      <input type="password" name="password" placeholder="Password"  class="form-control" required>
    </div>
    <label>
      <div class="checkbox mt-3 small">
        <input type="checkbox" value="remember-me"> Remember me
      </div>
      <div class="mt-3 small">
        <%= link_to 'Forgot password?', password_forgot_path %>
      </div>
    </label>
    <button class="btn btn-sm btn-dark btn-block" type="submit">Sign in</button>
  </form>
  <div class="btn-omniauth">
    <%= render partial: 'layouts/oauth_buttons' %>
  </div>
  <div class="btn-omniauth">
    <hr>
    <%= link_to 'Create an account', new_user_path, class: 'btn btn-sm btn-block btnSecOption btnSecHover' %>
    <p class="mt-3 mb-3 text-muted">&copy; <%= "2017 - #{Time.now.year}" %></p>
  </div>
</div>
