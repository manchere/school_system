<div class ="py-5">
    <%#%= params %>
    <%= flash.alert %>
    <form action="login" method="POST" class="form-signin">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="text-center py-3"> 
          <%= image_tag 'logo.png',height: 150, width: 160 %>
        </div>
        <label for="inputEmail" class="sr-only"></label>
        <input type="text" name="username" placeholder="username" class="form-control" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="password" placeholder="password"  class="form-control" required>
        <label>
        <div class="checkbox mt-3">
          <input type="checkbox" value="remember-me"> Remember me
        </div>
        <div class="mt-3">
          <%= link_to 'Forgot password?', password_forgot_path %>
        </div>
        </label>  
        <button class="btn btn-sm btn-dark btn-block" type="submit">Sign in</button>
        <hr>
        <%= link_to 'Create an account', new_user_path, class: 'btnSecOption btn btn-sm btn-block' %>
        <p class="mt-3 mb-3 text-muted">&copy; <%= "2017 - #{Time.now.year}" %></p>
    </form>
</div>
