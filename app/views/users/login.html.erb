<div class ="py-5">
  <%#%= params %>
  <form action="login" method="POST" class="form-signin">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="text-center py-3">
      <%= image_tag 'logo.png',height: 150, width: 160 %>
    </div>
    <div class="mb-2">
      <span class="text-danger mb-4" ><%=  %></span>
    </div>
    <div class="mb-3">
      <label for="inputEmail" class="sr-only"></label>
      <input type="text" name="email" placeholder="Email or username" class="form-control" required autofocus>
    </div>
    <div class="mb-3">
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" name="password" placeholder="Password"  class="form-control" required>
    </div>
    <label>
      <div class="checkbox mt-3">
        <input type="checkbox" value="remember-me"> Remember me
      </div>
      <div class="mt-3">
        <%= link_to 'Forgot password?', password_forgot_path %>
      </div>
    </label>
    <button class="btn btn-sm btn-dark btn-block" type="submit">Sign in</button>
    <hr>
    <%= link_to 'Create an account', new_user_path, class: 'btnSecOption btnSecHover btn btn-sm btn-block' %>
    <p class="mt-3 mb-3 text-muted">&copy; <%= "2017 - #{Time.now.year}" %></p>
  </form>
</div>
<form class="form-signin">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <img class="mb-4" src="../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  <label for="inputEmail" class="sr-only">Email address</label>
  <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  <p class="mt-5 mb-3 text-muted">&copy; 2017-2020</p>
</form>